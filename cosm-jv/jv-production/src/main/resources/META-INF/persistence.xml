<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
    <persistence-unit name="ProductionPU" transaction-type="JTA">
        <jta-data-source>java:/jboss/datasources/JvProductionDS</jta-data-source>
        <class>com.cosm.jv.production.domain.model.Production</class>
        <class>com.cosm.jv.production.domain.model.ProductionDetail</class>
        <class>com.cosm.jv.production.domain.model.AlternativeFundingProductionDetail</class>
        <class>com.cosm.jv.production.domain.model.CarryProductionDetail</class>
        <class>com.cosm.jv.production.domain.model.ModifiedCarryProductionDetail</class>
        <class>com.cosm.jv.production.domain.model.ProductionEntitlement</class>
        <class>com.cosm.jv.production.domain.model.AlternativeFundingProductionEntitlement</class>
        <class>com.cosm.jv.production.domain.model.CarryProductionEntitlement</class>
        <class>com.cosm.jv.production.domain.model.ModifiedCarryProductionEntitlement</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <properties>
            <!--<property name="javax.persistence.schema-generation.database.action" value="create"/>-->
        </properties>
    </persistence-unit>
</persistence>
